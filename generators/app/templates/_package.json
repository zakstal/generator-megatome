{
  "name": "<%= Appname %>",
  "version": "0.0.0",
  "description": "A React/Webpack stack",
  "private": true,
  "src": "src",
  "test": "test",
  "dist": "dist",
  "mainInput": "src/main.js",
  "mainOutput": "dist/index.html",
  "scripts": {
    "go": "webpack --render --progress && webpack --production --progress && nodemon --harmony server/server.js && BUILD_DEV=1 webpack-dev-server --watch --progress --colors --port 8000 --inline --content-base dist/",
    "start": "BUILD_DEV=1 webpack-dev-server --watch --progress --colors --port 8000 --inline --content-base dist/",
    "up": "BUILD_DEV=1 webpack-dev-server --watch --progress --colors --port 8000 --inline --content-base dist/ ",

    "embed": "NODE_ENV=production webpack --embed --progress --colors",

    "render": "webpack --render --progress --profile --colors",

    "modules": "webpack --production --progress --profile --colors --v --debug --display-modules",
    "build": "rm -rf ./dist && rm -rf ./build && mkdir ./build && webpack --production --progress --colors",
    "build-up": "npm run build && open http://localhost:8080 && node --harmony server/server.js",

    "dry": "rm -rf ./dist && rm -rf ./build && webpack --production --progress --colors",
    "dry-up": "npm run dry && open http://localhost:8080 && node --harmony server/server.js",

    "docker-build": "docker build -t <%= DockerRegistry %>:/<%= Appname %>:latest .",
    "docker-push": "docker push <%= DockerRegistry %>/<%= Appname %>:latest",
    "docker-run": "open http://`boot2docker ip`:8080 && docker run -ti -p 8080:8080 <%= DockerRegistry %>/<%= Appname %>:latest",

    "postinstall": "<% if(env.options.bower) { %> ./node_modules/bower/bin/bower install <%} %>"
  },
  "dependencies": {
    "babel-core": "^6.2.1",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-runtime": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "babel-runtime": "^6.2.0",
    "body-parser": "^1.13.3",
    "bower": "^1.5.2",
    "compression": "^1.5.2",
    "compression-webpack-plugin": "^0.2.0",
    "css-loader": "^0.23.0",
    "es6-symbol": "^3.0.1",
    "exports-loader": "^0.6.2",
    "expose-loader": "^0.7.0",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^0.9.1",
    "gm": "^1.18.1",
    "history": "^1.17.0",
    "html-webpack-plugin": "^1.6.1",
    "imports-loader": "^0.6.4",
    "install": "^0.4.0",
    "jshint-loader": "^0.8.3",
    "json-loader": "^0.5.2",
    "jsx-loader": "^0.13.2",
    "jsxhint-loader": "^0.2.0",
    "moment": "^2.10.6",
    "node-sass": "3.4.2",
    "npm": "^3.5.0",
    "object-assign": "^4.0.1",
    "react": "^0.14.6",
    "react-addons-perf": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-hot-loader": "^1.3.0",
    "react-motion": "^0.3.1",
    "react-proxy-loader": "^0.3.4",
    "react-router": "^1.0.3",
    "resize-image-loader": "^0.4.0",
    "sass-loader": "3.1.2",
    "stats-webpack-plugin": "^0.2.1",
    "style-loader": "0.13.0",
    "superagent": "^1.4.0",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.2"
  },
  "devDependencies": {
    "nodemon": "^1.3.7",
    "react-hot-loader": "^1.2.7",
    "webpack-dev-server": "^1.12.1"
  }
}
